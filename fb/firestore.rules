service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /users/{user} {
      allow create: if !exists(/databases/$(database)/documents/users/$(request.resource.data.username))
      allow update: if request.auth.uid == user && request.resource.data.username == resource.data.username;
      allow read: if true;
    }
    match /users/{user}/saved/{saveId} {
      allow read: if true;
      allow write: if request.auth.token.name == user;
    }
    match /groups/{allDocuments=**}{
      allow read: if true;
    }
    match /uploads/{userId}/{allDocuments=**} {
      allow read: if true;
      allow write, update: if request.auth.uid == userId;
    }
  }
}